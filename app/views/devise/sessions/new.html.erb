<% provide(:title, 'ログイン') %>
<div class="row justify-content-center">
  <div class="col-md-6 text-center">
    <h1 class="logo">MonoLog</h1>
    <h2>ログイン</h2>
    <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
    <p class="mb-3">
      パスワードをお忘れですか？
      <%= link_to "パスワードを確認", new_user_password_path %>
    </p>
    <p class="mb-3">
      アカウントをお持ちではないですか？
      <%= link_to "新規登録", new_user_registration_path %>
    </p>
  </div>
</div>